			<mvc:mapping path="/qrcoderest/upload/feedbacks" />
			<mvc:mapping path="/rest/{clientid}/upload/feedbacks" />
			<bean class="com.mavjay.healthtack.utils.FeedbackInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors> -->
	<task:annotation-driven />
</beans>
